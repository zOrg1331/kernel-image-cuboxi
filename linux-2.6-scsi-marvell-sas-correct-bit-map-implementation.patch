+++ b/drivers/scsi/mvsas.c
@@ -42,7 +42,7 @@
 #include <asm/io.h>
 
 #define DRV_NAME	"mvsas"
-#define DRV_VERSION	"0.5.2"
+#define DRV_VERSION	"0.5.3"
 
