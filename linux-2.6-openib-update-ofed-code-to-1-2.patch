+static void control_send_complete(struct io *io)
+{
+	struct control *control = &io->viport->control;
+
+	CONTROL_FUNCTION("%s: control_send_complete()\n",
+			 control_ifcfg_name(control));
+	control->req_outstanding = 0;
+}
