+		         	 V_CQE_SWCQE(1) |
+		         	 V_CQE_QPID(wq->qpid) |
+		         	 V_CQE_GENBIT(Q_GENBIT(cq->sw_wptr,
+						       cq->size_log2)));
+	*(cq->sw_queue + Q_PTR2IDX(cq->sw_wptr, cq->size_log2)) = cqe;
+	cq->sw_wptr++;
